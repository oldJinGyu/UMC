<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <SeekBar
        android:id="@+id/bar_m"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mstart"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:backgroundTint="#B0B0B0"
        android:text="재생"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/bar_m"
        app:layout_constraintTop_toBottomOf="@+id/bar_m" />

    <Button
        android:id="@+id/btn_mstop"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:backgroundTint="#B0B0B0"
        android:text="정지"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/btn_mstart"
        app:layout_constraintTop_toBottomOf="@+id/bar_m" />

    <Button
        android:id="@+id/btn_mend"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:backgroundTint="#B0B0B0"
        android:text="종료"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/btn_mstop"
        app:layout_constraintTop_toBottomOf="@+id/bar_m" />

    <TextView
        android:id="@+id/mtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_mstop"
        app:layout_constraintStart_toEndOf="@+id/bar_m"
        app:layout_constraintTop_toTopOf="@+id/bar_m" />

    <TextView
        android:id="@+id/mnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/bar_m"
        app:layout_constraintEnd_toStartOf="@+id/bar_m"
        app:layout_constraintTop_toTopOf="@+id/bar_m" />
</androidx.constraintlayout.widget.ConstraintLayout>